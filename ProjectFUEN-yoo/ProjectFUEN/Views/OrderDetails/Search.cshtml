    @functions {
    public string GetStateName(int state)
    {
        string StateName = "";
        switch (state)
        {
            case 0:
                StateName = @$"<span style=""color: red ;"">未出貨</span>";
                break;
            case 1:
                StateName = @$"<span style=""color: green ;"">已出貨</span>";
                break;
            case 2:
                StateName = @$"<span style=""color: #ccc ;"">運送中</span>";
                break;
            case 3:
                StateName = "已簽收";
                break;
            case 4:
                StateName = "已完成";
                break;
            default:
                StateName = "訂單異常";
                break;

        }
        return StateName;
    }
}
